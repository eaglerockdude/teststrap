<%- model_class = Widget -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cog) %></th>
      <th><%= model_class.human_attribute_name(:gear) %></th>
      <th><%= model_class.human_attribute_name(:axle) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= link_to widget.id, widget_path(widget) %></td>
        <td><%= widget.cog %></td>
        <td><%= widget.gear %></td>
        <td><%= widget.axle %></td>
        <td><%=l widget.created_at %></td>
        <td>
          <%= content_tag :button, t('.edit', :default => t("helpers.links.edit")),
                      :class => 'btn btn-default btn-xs', :data => {toggle: 'modal', target: "#modal-#{widget.id}"} %>
          <%= modal_dialog :id => "modal-#{widget.id}",
            :header => { :show_close => true, :dismiss => 'modal', :title => 'Edit Widget' },
            :body   => render(partial: 'form', locals: {widget: widget}),
            :footer => content_tag(:button, 'Save', class: 'btn') %>


          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      widget_path(widget),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= modal_dialog :id => "modal-new",
            :header => { :show_close => true, :dismiss => 'modal', :title => 'New Widget' },
            :body   => render(partial: 'form', locals: {widget: model_class.new}),
            :footer => content_tag(:button, 'Save', class: 'btn') %>
<%= content_tag :button, t('.new', :default => t("helpers.links.new")),
                      :class => 'btn btn-default', :data => {toggle: 'modal', target: "#modal-new"} %>